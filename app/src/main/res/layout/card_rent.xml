<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_rent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"

    card_view:cardCornerRadius="25dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_rent"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/address1_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_rent"

            android:layout_marginLeft="25dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorGray" />

        <TextView
            android:id="@+id/address2_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/address1_rent"
            android:layout_marginLeft="25dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorGray" />

        <TextView
            android:id="@+id/bed_bath_sqft_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/address2_rent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:id="@+id/dot_rent"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:scaleType="centerInside"
            android:layout_marginTop="4.5dp"
            android:layout_alignLeft="@+id/address1_rent"
            android:layout_alignStart="@+id/address1_rent"
            android:layout_below="@+id/bed_bath_sqft_rent" />


        <TextView
            android:id="@+id/FOR_RENT_OR_SALE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_below="@+id/bed_bath_sqft_rent"
            android:layout_toRightOf="@+id/dot_rent"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/price_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/FOR_RENT_OR_SALE"
            android:layout_alignLeft="@+id/bed_bath_sqft_rent"
            android:layout_alignStart="@+id/bed_bath_sqft_rent"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/compare_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/compare1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_alignBottom="@+id/price_rent"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:id="@+id/like_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/like1"
            android:layout_alignBottom="@+id/compare_rent"
            android:layout_toLeftOf="@+id/compare_rent"
            android:layout_marginRight="20dp"
            android:layout_above="@+id/price_rent" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
